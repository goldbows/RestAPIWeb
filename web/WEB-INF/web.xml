<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
           version="4.0">
    <servlet>
        <servlet-name>AvailabilityAPI</servlet-name>
        <servlet-class>AvailabilityAPI</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AvailabilityAPI</servlet-name>
        <url-pattern>/api/availability</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TicketAPI</servlet-name>
        <servlet-class>TicketAPI</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TicketAPI</servlet-name>
        <url-pattern>/api/createBooking</url-pattern>
    </servlet-mapping>

</web-app>
